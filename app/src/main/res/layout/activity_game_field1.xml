<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.dhbw.mschoech.muehlemenuefuehrung.Game">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black"
        android:clickable="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/layoutGame">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PlayerName"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:id="@+id/textPlayerTurn"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"/>

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:id="@+id/buttonOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strButOptions"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/buttonHome"
            android:layout_toEndOf="@+id/buttonHome"
            android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha" />

        <ImageButton
            android:id="@+id/buttonEnd"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/abc_ic_clear_mtrl_alpha"
            android:layout_alignBottom="@+id/textPlayerTurn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/buttonRedo"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redo"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/buttonUndo"
            android:src="@drawable/icon_redo_100"
            android:background="#ff000000"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_toStartOf="@+id/textNextStep"
            android:layout_alignTop="@+id/buttonUndo"
            android:layout_toLeftOf="@+id/textNextStep" />


        <ImageButton
            android:id="@+id/buttonUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_undo_100"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_toStartOf="@+id/buttonOptions"
            android:background="#ff000000"
            android:layout_toLeftOf="@+id/buttonOptions" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/strButHome"
            android:id="@+id/buttonHome"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/abc_ic_menu_selectall_mtrl_alpha" />


        <RelativeLayout
                    android:id="@+id/gameLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">


            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/gameBackground1"
                android:src="@drawable/spielbrett1080"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Next Step"
            android:id="@+id/textNextStep"
            android:layout_alignTop="@+id/buttonUndo"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>

    </RelativeLayout>

</RelativeLayout>
