<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Main"
    android:id="@+id/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Willkommen zu MÃ¼hle"
        android:id="@+id/salutation"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="94dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Benutzername:   "
        android:id="@+id/usrNameLabel"
        android:layout_alignBottom="@+id/usrNameLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="130dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/usrName"
        android:layout_below="@+id/salutation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/buttonStart"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/salutation"
        android:layout_alignEnd="@+id/salutation"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Optionen"
        android:id="@+id/buttonOptions"
        android:layout_below="@+id/buttonStart"
        android:layout_alignRight="@+id/buttonStart"
        android:layout_alignEnd="@+id/buttonStart" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Credits"
        android:id="@+id/buttonCredits"
        android:layout_below="@+id/buttonOptions"
        android:layout_alignLeft="@+id/buttonOptions"
        android:layout_alignStart="@+id/buttonOptions" />
</RelativeLayout>
